# OpenClaw Dashboard Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Options: sqlite, postgres
DB_TYPE=sqlite
DB_PATH=./data/dashboard.db
# DATABASE_URL=postgresql://user:password@localhost:5432/openclaw_dashboard

# OpenClaw Integration
OPENCLAW_API_URL=http://localhost:8080
OPENCLAW_API_KEY=

# Kimi Console Integration
KIMI_API_KEY=
KIMI_CONSOLE_URL=https://console.kimi.com

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WebSocket Configuration
WS_PORT=3002
WS_PATH=/ws

# Monitoring & Alerts
ALERT_THRESHOLD_LOW=80
ALERT_THRESHOLD_MEDIUM=90
ALERT_THRESHOLD_HIGH=95
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=
ALERT_EMAIL_PASS=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Flags
ENABLE_REAL_TIME=true
ENABLE_ANALYTICS=true
ENABLE_EXPORTS=true

# Frontend URL (for CORS and links)
FRONTEND_URL=http://localhost:3000